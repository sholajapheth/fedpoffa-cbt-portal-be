# FEDPOFFA CBT Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
DEBUG=True
APP_NAME="FEDPOFFA CBT System"
APP_VERSION="0.1.0"

# FEDPOFFA Institution Settings
INSTITUTION_NAME="Federal Polytechnic Offa"
INSTITUTION_URL="https://portal.fedpoffaonline.edu.ng/"
INSTITUTION_EMAIL="it@fedpoffaonline.edu.ng"

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost/fedpoffa_cbt"

# Security Settings
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (for FEDPOFFA frontend)
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:3001"]

# Email Configuration (for FEDPOFFA notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# File Upload Settings
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Assessment Settings
DEFAULT_ASSESSMENT_DURATION=60  # minutes
MAX_ASSESSMENT_ATTEMPTS=3
AUTO_SAVE_INTERVAL=30  # seconds

# Redis Configuration (optional, for session management)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/fedpoffa_cbt.log" 